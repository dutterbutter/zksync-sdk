{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "composite": false,
    "incremental": false
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["**/*.test.ts", "**/__tests__/**", "test/**", "src/**/e2e/**", "**/*.e2e.ts"]
}
